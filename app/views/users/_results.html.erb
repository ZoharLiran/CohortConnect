<div id="searchbarresults">
  <h2> You found <%= results.length %> users. </h2>

  <table>
    <tr><th>Name</th><th>Cohort</th><th>Current Location</th><th>Company</th></tr>
    <% results.each do |user| %>
      <% if user %>
        <tr>
          <td><%= link_to user.name, user_path(user), { :class => "profile-link" , :id => user.id } %></td>
          <td><%= user.cohort.name %></td>
          <td><%= user.current_location %></td>
          <td><%= user.company %></td>
        </tr>
      <% end %>
    <% end %>
    <a class="close-pop-up" href="#" rel="modal:close"><i class="fa fa-times-circle-o fa-lg"></i></a>
  </table>
</div>